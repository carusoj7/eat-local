<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h1>Edit Review!</h1>
  <form 
    action="/restaurants/<%= restaurant._id %>/reviews/<%= review._id %>?_method=PUT"
    method="POST"
  >
  <label for="content-textarea">Review:</label>
  <textarea name="content" id="content-textarea" value="<% review.content %>"></textarea>
  <label for="rating-select">Rating:</label>
  <select name="rating" id="rating-select" value="<% review.rating %>">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5" selected>5</option>
  </select>
  <label for="visitAgain-checkbox">Visit Again?</label>
  <input type="checkbox" name="visitAgain" id="visitAgain-checkbox" value="<%= review.visitAgain %>">
  <button type="submit">Save</button>
</form>
</section>

<%- include('../partials/footer') %>