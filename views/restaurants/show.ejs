<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/restaurants/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div><%= restaurant.name %></div>
    <div>Location:</div>
    <div><%= restaurant.location %></div>
    <div>Speciality</div>
    <div><%= restaurant.specialty %></div>
    <div>Food Type</div>
    <div><%= restaurant.foodType %></div>
    <div><%= restaurant.fancy ? 'Fancy' : 'Not Fancy' %> </div>
    <div>
      <% if (user) { %>
      <a href="/restaurants/<%= restaurant._id %>/edit">
        <button>Edit Restaurant</button>
      </a>
      <form action="/restaurants/<%= restaurant._id %>?_method=DELETE" method="POST">
        <button class="btn" type="submit"> Delete Restaurant</button>
        </form>
      <% } %>
    </div>
  </section>
  <h2>Reviews</h2>
  <% if (user) { %>
    <h3>Add A Review</h3>
    <form action="/restaurants/<%= restaurant._id %>/reviews" method="POST">
      <textarea name="content"></textarea><br>
      <button>Add Review</button>
    </form>
  <% } %>
</main>



<%- include('../partials/footer') %>